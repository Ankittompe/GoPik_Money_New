                                android:layout_gravity="center"
                                android:layout_marginLeft="5dp"
                                android:background="@drawable/correct"
                                android:visibility="gone" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
