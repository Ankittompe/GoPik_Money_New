                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center_vertical"
                                            android:layout_weight="1"
                                            android:fontFamily="@font/montserrat_semibold"
                                            android:gravity="center"
                                            android:padding="10dp"
                                            android:text="Adhaar Back"
                                            android:textColor="@color/colorPrimary"
                                            android:textSize="14dp" />

                                        <ImageView
                                            android:id="@+id/dropdown1_adhar_back"
                                            android:layout_width="40dp"
                                            android:layout_height="40dp"
                                            android:layout_marginLeft="5dp"
                                            android:layout_marginTop="5dp"
                                            android:src="@drawable/ic_arrow_drop_down_black_24dp"
                                            android:visibility="visible" />

                                        <ImageView
                                            android:id="@+id/dropup1_adhar_back"
                                            android:layout_width="40dp"
                                            android:layout_height="40dp"
                                            android:layout_marginLeft="5dp"
                                            android:layout_marginTop="5dp"
                                            android:src="@drawable/ic_arrow_drop_up_black_24dp"
                                            android:visibility="gone" />
                                    </LinearLayout>

                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/adhaar_back_layout"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:visibility="gone">

                                    <TextView
                                        android:id="@+id/upload_adhaar_back_tv"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/coresanscrbold"
                                        android:gravity="left"
                                        android:padding="15dp"
                                        android:text="3. Upload Adhaar Card Back *"
                                        android:textColor="@color/colorPrimary"
                                        android:textSize="14sp"

                                        />

                                    <ImageView
