<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:layout_margin="5dp">

    <TextView
        android:id="@+id/item_count_tv"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_margin="2dp"
        android:gravity="center"
        android:text="1"
        android:textColor="@color/black"
        app:cardCornerRadius="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">



    </TextView>

    <TextView
        android:id="@+id/modified_product_name"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:text="Mega T12"
        android:gravity="center"
        android:textColor="@color/black"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/item_count_tv"
        app:layout_constraintStart_toEndOf="@+id/item_count_tv"
        app:layout_constraintTop_toTopOf="@+id/item_count_tv">

    </TextView>


    <TextView
        android:id="@+id/in_qty"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_marginStart="8dp"
        android:background="@color/white"
        android:gravity="center"
        android:padding="4dp"
        android:text="Initial Qty :"
        android:textColor="@color/black"
        app:cardCornerRadius="8dp"
        app:layout_constraintStart_toEndOf="@+id/modified_product_name"
        app:layout_constraintTop_toTopOf="parent">

    </TextView>

    <TextView
        android:id="@+id/initial_qty_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:textColor="@color/black"
        android:text="100"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/in_qty"
        app:layout_constraintStart_toEndOf="@+id/in_qty"
        app:layout_constraintTop_toTopOf="@+id/in_qty" />

    <TextView
        android:id="@+id/later_qty"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_marginStart="8dp"
        android:background="@color/white"
        android:gravity="center"
        android:padding="4dp"
        android:text="Later Qty  :"
        android:textColor="@color/black"
        app:cardCornerRadius="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/modified_product_name"
        app:layout_constraintTop_toBottomOf="@+id/in_qty">

    </TextView>

    <TextView
        android:id="@+id/modified_qty_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:text="50"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/later_qty"
        app:layout_constraintStart_toEndOf="@+id/later_qty"
        app:layout_constraintTop_toBottomOf="@+id/in_qty" />

    <TextView
        android:id="@+id/initial_price_tv"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_marginEnd="16dp"
        android:gravity="center"
        android:text="₹10,000,000"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:cardCornerRadius="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/in_qty"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </TextView>

    <TextView
        android:id="@+id/modified_price_tv"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_marginEnd="16dp"
        android:gravity="center"
        android:text="₹5,000,000"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:cardCornerRadius="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/later_qty"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/later_qty">

    </TextView>





</androidx.constraintlayout.widget.ConstraintLayout>