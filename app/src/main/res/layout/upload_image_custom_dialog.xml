<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/_400sdp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    app:cardCornerRadius="@dimen/_15sdp">

    <RelativeLayout
        android:layout_width="@dimen/_400sdp"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/a"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:background="@color/hero_light_green"
            android:gravity="center"
            android:padding="@dimen/_20sdp"
            android:text="Upload Goat Photos"
            android:textColor="@color/white"
            android:textSize="@dimen/_30sdp" />

        <LinearLayout
            android:id="@+id/linOne"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/a"
            android:layout_marginTop="@dimen/_10sdp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_10sdp"
                    android:background="@color/blue"
                    android:gravity="center"
                    android:padding="@dimen/_10sdp"
                    android:text="Goat 1st Image"
                    android:textColor="@color/white" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/imgUploadOne"
                    android:layout_width="@dimen/_200sdp"
                    android:layout_height="@dimen/_150sdp"
                    android:layout_below="@+id/a"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/_5sdp"
                    android:gravity="center_horizontal"
                    android:src="@drawable/camera"
                    app:civ_border_color="@color/black"
                    app:civ_border_width="@dimen/_5sdp"
                    app:civ_circle_background_color="@color/black" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_10sdp"
                    android:background="@color/blue"
                    android:gravity="center"
                    android:padding="@dimen/_10sdp"
                    android:text="Goat 2nd Image"
                    android:textColor="@color/white" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/imgUploadTwo"
                    android:layout_width="@dimen/_200sdp"
                    android:layout_height="@dimen/_150sdp"
                    android:layout_below="@+id/a"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/_5sdp"
                    android:gravity="center_horizontal"
                    android:src="@drawable/camera"
                    app:civ_border_color="@color/black"
                    app:civ_border_width="@dimen/_5sdp"
                    app:civ_circle_background_color="@color/black" />

            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/btnUpload"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linOne"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:layout_marginBottom="@dimen/_15sdp"
            android:background="@drawable/button_click"
            android:gravity="center"
            android:text="Submit"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnUpload"
            android:layout_margin="@dimen/_15sdp"
            android:background="@drawable/button_click"
            android:gravity="center"
            android:text="Cancel"
            android:textColor="@color/white" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>