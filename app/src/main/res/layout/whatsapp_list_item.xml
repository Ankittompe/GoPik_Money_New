<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardVwWhatsAppStatus"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@drawable/rectangle_3"
    android:elevation="5dp"
    app:cardCornerRadius="5dp"
    app:cardElevation="5dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <com.qts.gopik_loan.Utils.CustomRegularTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:gravity="center_vertical"
                android:text="Customer Code"
                android:textColor="@color/hero_green" />

            <com.qts.gopik_loan.Utils.CustomRegularTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:gravity="center_vertical"
                android:text="Customer Name"
                android:textColor="@color/hero_green" />

            <com.qts.gopik_loan.Utils.CustomRegularTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:gravity="center_vertical"
                android:text="Customer Number"
                android:textColor="@color/hero_green" />

            <com.qts.gopik_loan.Utils.CustomRegularTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"

                android:text="Loan Type"
                android:textColor="@color/hero_green"
                android:visibility="gone" />

            <com.qts.gopik_loan.Utils.CustomRegularTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:gravity="center_vertical"
                android:text="Loan Amount"
                android:textColor="@color/hero_green" />

            <com.qts.gopik_loan.Utils.CustomRegularTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"

                android:text="PIN Number"
                android:textColor="@color/hero_green"
                android:visibility="gone" />

            <com.qts.gopik_loan.Utils.CustomRegularTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"

                android:text="Dealer Code"
                android:textColor="@color/hero_green"
                android:visibility="gone" />

            <com.qts.gopik_loan.Utils.CustomRegularTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:gravity="center_vertical"
                android:text="Dealer Brand"
                android:textColor="@color/hero_green"
                android:visibility="gone" />

            <com.qts.gopik_loan.Utils.CustomRegularTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="Dealer Name"
                android:textColor="@color/hero_green"
                android:visibility="gone" />

            <com.qts.gopik_loan.Utils.CustomRegularTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="Financer"
                android:textColor="@color/hero_green"
                android:visibility="gone" />

            <com.qts.gopik_loan.Utils.CustomRegularTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="Application Status"
                android:textColor="@color/hero_green" />

            <com.qts.gopik_loan.Utils.CustomRegularTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="Date/Time"
                android:textColor="@color/hero_green"
                android:visibility="gone" />

            <com.qts.gopik_loan.Utils.CustomRegularTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="Updated At"
                android:textColor="@color/hero_green"
                android:visibility="gone" />

            <com.qts.gopik_loan.Utils.CustomRegularTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="Message"
                android:textColor="@color/hero_green"
                android:visibility="gone" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <com.qts.gopik_loan.Utils.CustomRegularTextView
                android:id="@+id/txtCustomerCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="Customer Code:" />

            <com.qts.gopik_loan.Utils.CustomRegularTextView
                android:id="@+id/txtCustomerName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="Customer Name:" />

            <com.qts.gopik_loan.Utils.CustomRegularTextView
                android:id="@+id/txtCustomerNo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="Customer Number:" />

            <com.qts.gopik_loan.Utils.CustomRegularTextView
                android:id="@+id/txtLoanType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="Loan Type:"
                android:visibility="gone" />

            <com.qts.gopik_loan.Utils.CustomRegularTextView
                android:id="@+id/txtLoanAmount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="Loan Amount:" />

            <com.qts.gopik_loan.Utils.CustomRegularTextView
                android:id="@+id/txtPinNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="PIN Number:"
                android:visibility="gone" />

            <com.qts.gopik_loan.Utils.CustomRegularTextView
                android:id="@+id/txtDealerCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="Dealer Code"
                android:visibility="gone" />

            <com.qts.gopik_loan.Utils.CustomRegularTextView
                android:id="@+id/txtDealerBrand"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="Dealer Brand"
                android:visibility="gone" />

            <com.qts.gopik_loan.Utils.CustomRegularTextView
                android:id="@+id/txtDealerName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="Dealer Name"
                android:visibility="gone" />

            <com.qts.gopik_loan.Utils.CustomRegularTextView
                android:id="@+id/txtLoanPriority"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="Loan Priority"
                android:visibility="gone" />

            <com.qts.gopik_loan.Utils.CustomRegularTextView
                android:id="@+id/txtApplicationStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="Application Status" />

            <com.qts.gopik_loan.Utils.CustomRegularTextView
                android:id="@+id/txtCreatedAt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="Created At"
                android:visibility="gone" />

            <com.qts.gopik_loan.Utils.CustomRegularTextView
                android:id="@+id/txtUpdatedAt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="Updated At"
                android:visibility="gone" />

            <com.qts.gopik_loan.Utils.CustomRegularTextView
                android:id="@+id/txtMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="Message"
                android:visibility="gone" />

        </LinearLayout>

        <ImageButton
            android:id="@+id/imgGotoDetails"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_gravity="center"
            android:background="@drawable/ic_arrow_right" />

    </LinearLayout>

</androidx.cardview.widget.CardView>


